<?xml version="1.0" encoding="utf-8"?>
<!-- PlayAround Launch Splash Screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@color/playaround_surface" />

    <!-- PlayAround logo/icon in center -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>

    <!-- App name below logo -->
    <item android:gravity="center|bottom" android:bottom="120dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
